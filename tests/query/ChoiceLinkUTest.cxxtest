	Handle answer = eval->eval_h("answer");

	printf("compound found:\n%s\n", result->to_short_string().c_str());
	TS_ASSERT_EQUALS(3, getarity(result));
	TS_ASSERT_EQUALS(result, answer);

	logger().debug("END TEST: %s", __FUNCTION__);
}
